{
  // enable / disable spell checker
  "cSpell.enabled": false,
  // define settings
  "cSpell.languageSettings": [
    // This one works with Python
    {
      "languageId": "python",
      // Only check strings
      "includeRegExpList": [
        "/#.*/",
        "/[^\\1]+?\\1/g",
        "strings"
      ]
    },
    // This one works with JavaScript, Typescript, etc
    {
      "languageId": "javascript,typescript",
      // Turn off compound words, because it is only checking strings.
      "allowCompoundWords": false,
      // Only check comments and strings
      "includeRegExpList": [
        "CStyleComment",
        "strings"
      ]
    },
    // Use with cpp or c files
    {
      "languageId": "cpp,c",
      // Turn off compound words, because it is only checking strings.
      "allowCompoundWords": false,
      // Only check comments and strings
      "includeRegExpList": [
        "CStyleComment",
        "string"
      ],
      // Exclude includes, because they are also strings.
      "ignoreRegExpList": [
        "/#include.*/"
      ]
    }
  ],
  "cSpell.ignoreWords": [
    "codecademy",
    "colps",
    "colpshift",
    "compact",
    "coms",
    "gruvbox",
    "honza",
    "iamcco",
    "iluminate",
    "katex",
    "kevinhwang",
    "kpis",
    "kshenoy",
    "layout",
    "leave",
    "let",
    "luochen",
    "machakann",
    "mkdp",
    "mkit",
    "mkitt",
    "morhetz",
    "mzgg",
    "neoclide",
    "nerd",
    "options",
    "preview",
    "qutebrowser",
    "r",
    "rethy",
    "rnvimr",
    "saiw",
    "sexy",
    "smartf",
    "tjdevries",
    "tmpdir",
    "tpope",
    "vimade",
    "ysiw"
  ],
    // diagnostic-languageserver
    "diagnostic-languageserver.enable": true,
    "diagnostic-languageserver.filetypes": {
      "vim": "vint",
      "email": "languagetool",
      "markdown": [ "write-good", "markdownlint" ],
      "sh": "shellcheck",
      "elixir": ["mix_credo", "mix_credo_compile"],
      "eelixir": ["mix_credo", "mix_credo_compile"],
      "php": ["phpstan", "psalm"]
    },
}

conky.config = {
out_to_console = true,
out_to_x = false,
background = false,
update_interval = 2,
total_run_times = 0,
use_spacer = 'none',
};
conky.text = [[
${execi 1800 checkupdates | awk 'END { print (NR == 0 ? ":: pkg UP" : ":: NEW " NR " pkg" (NR > 1 ? "s" : ""))}'} :: $kernel _ $uptime :: Load $cpu% Freq $freq_g Temp ${acpitemp}c :: Mem $memperc% ($mem) :: Lan ▼${downspeed enp2s0}K/s ▲${upspeed enp2s0}K/s :: Bat ${battery_percent BAT0}% :: Mail ${execi 300 python ~/.scripts/gmail.py} :: ${time %a %b %d %Y %R}
]];

